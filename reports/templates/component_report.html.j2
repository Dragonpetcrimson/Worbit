{% extends "base.html.j2" %}
{% block content %}
<h1>Component Analysis for {{ test_id }}</h1>
<div class="summary">
    <p><strong>Analysis Date:</strong> {{ timestamp }}</p>
    <p><strong>Components Tagged:</strong> {{ metrics.component_tagged_logs }}</p>
    <p><strong>Errors Tagged:</strong> {{ metrics.component_tagged_errors }}</p>
    <p><strong>Clusters Identified:</strong> {{ metrics.clusters }}</p>
    <p><strong>Root Cause Errors:</strong> {{ metrics.root_cause_errors }}</p>
</div>
{% if component_viz %}
<div class="visualization">
    <h2>Component Error Distribution</h2>
    <img src="{{ component_viz }}" alt="Component Error Distribution">
</div>
{% endif %}
{% if relationships_viz %}
<div class="visualization">
    <h2>Component Relationship Diagram</h2>
    <img src="{{ relationships_viz }}" alt="Component Relationships">
</div>
{% endif %}
{% endblock %}
